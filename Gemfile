  gem 'rspec-rails', '~> 2.12.2'
  gem 'webrick', '~> 1.3.1'
end

group :local, :development do
  gem 'better_errors', '~> 0.3.2'
  gem 'binding_of_caller', '~> 0.7.1'
end


